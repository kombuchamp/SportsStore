@model IdentityUser

@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var userManager = ViewBag.userManager as UserManager<IdentityUser>; // TODO: use @inject instead of viewbag
    var roles = await userManager.GetRolesAsync(Model);
}

<div class="bg-primary m-1 p-1"><h4>Edit User</h4></div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="EditUser" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="userName">Username</label>
        <input name="userName" class="form-control" value=@Model.UserName />
    </div>
    <div class="form-group">
        <label for="roles">Roles</label>
        <input name="roles" class="form-control" value="@string.Join(",", roles)" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>